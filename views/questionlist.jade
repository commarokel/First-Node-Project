extends layout

block content
  .page-header
  h3 List of questions <br /><br />
    each question in mainObj
      if !question.pageNumber
        h1 #[a(href='question/' + question.id) #{question.title}]
        p #{question.tag}
      else if question.pageNumber > 1
        h1 #[a(href='../question/' + question.id) #{question.title}]
        p #{question.tag}
      else
        h1 Nothing to show

    each page in totalPages
      if page === 1
        a(href='/questions-list') Page #{page}
      else 
        a(href='/questions-list/?pageSize=#{pageSize}&page=#{page}') Page #{page}

